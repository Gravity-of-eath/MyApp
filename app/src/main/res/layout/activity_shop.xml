<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yaookun.handmarket.activity.ShopActivity">


    <WebView
        android:id="@+id/shop_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_1">
    </WebView>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/rl_1"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/shop_btn_collect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="加入收藏"
            android:background="#867d7d"
            android:textColor="#ffffff"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/shop_btn_car"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:text="加入购物车"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            android:background="#99867d7d"
            android:layout_toLeftOf="@+id/shop_btn_buynow"
            android:layout_toStartOf="@+id/shop_btn_buynow" />
        <Button
            android:id="@+id/shop_btn_buynow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:text="立即购买"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            android:background="#867d7d"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@mipmap/point"
            android:layout_alignTop="@+id/shop_btn_car"
            android:layout_alignRight="@+id/shop_btn_car"
            android:layout_alignEnd="@+id/shop_btn_car" />


    </RelativeLayout>

</RelativeLayout>
