<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:id="@+id/griditem_imageView"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.08" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:id="@+id/griditem_textView2"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/griditem_imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:layout_marginTop="20dp"
        android:id="@+id/grid_item_price"
        android:textSize="18sp"
        android:gravity="left"
        android:textColor="#ff0000"
        android:layout_below="@+id/griditem_textView2"
        android:layout_toRightOf="@+id/griditem_imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/grid_item_oldprice"
        android:textSize="18sp"
        android:gravity="right"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/grid_item_price"
        android:layout_toRightOf="@+id/griditem_imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/grid_item_number"
        android:textSize="18sp"
        android:gravity="right"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/griditem_imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>